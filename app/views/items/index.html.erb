  <!-- Page Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-3">

        <h2 class="my-4">About us</h2>
        <p>Welcome on the Bryan Ajaro Gallery. Leader for online contemporary art sales. Our platform provides access to a large catalogue of contemporary artworks from the best galleries around the world. Discover works by world renowned artists, as well as by young emerging talents. We offer a variety of mediums including painting, sculpture, photography, print and mixed media.In keeping with our wish to make art more accessible, we also offer an online contemporary art magazine. </p>

      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="https://public-images-bryan-ajaro.s3.eu-west-3.amazonaws.com/renee-fisher-BAAxgD8foJE-unsplash.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="https://public-images-bryan-ajaro.s3.eu-west-3.amazonaws.com/sean-sinclair-C_NJKfnTR5A-unsplash.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="https://public-images-bryan-ajaro.s3.eu-west-3.amazonaws.com/xiang-gao-AxlXPFNCKUw-unsplash.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.col-lg-9 -->
    </div>
    <!-- /.row -->
    <br>
    <div class="rank">
      <% Item.all.order("id ASC").each do |i| %>
      <div id="contien">
        <div id="cardi">
          <div class="front face">
            <%if i.photo.attached?%>
            <%= image_tag i.photo, alt: 'photo' %>
            <%else%>
            <a href="#"><img class="cardi-img" src="assets/shefta-shifa-tccP0BotaAA-unsplash.jpg" alt=""></a>
            <%end%>
          </div>
          <div class="back face">
            <h4><%= link_to i.name, i %></h4>
            <div class="row">
              <p class="card-text"><%= i.description %></p>
              <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
              <p><%= i.price %> $</p>
            </div>
            <% if user_signed_in? %>
            <% if current_user.is_admin? %>
            <%= form_tag item_path(i.id), method: "put", multipart: true do %>
            <%= file_field_tag :photo %>
            <%= submit_tag "uploader l'avatar" %>
            <% end %>
            <% end %>
            <% end %>
          </div>

        </div>
      </div>
      <%end%>
    </div>
  </div>
  <!-- /.container -->
